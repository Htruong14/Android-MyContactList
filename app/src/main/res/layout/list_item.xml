<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/system_blue"
            android:text="Contact Name"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/textHomeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_below="@id/textContactName"
            android:text="Home Number:" />

        <TextView
            android:id="@+id/textCellNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:layout_alignBaseline="@+id/textHomeNumber"
            android:layout_toRightOf="@+id/textHomeNumber"
            android:text="Cell Number: " />

        <TextView
            android:id="@+id/textAddress_List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/textHomeNumber"
            android:text="Address:" />



        <Button
            android:id="@+id/buttonDeleteContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/system_red"
            android:background="@color/system_transparent"
            android:visibility="invisible"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignTop="@+id/textContactName"
            android:layout_alignBottom="@+id/textHomeNumber"
            android:text="Delete" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/textContactName"
            android:layout_alignBottom="@+id/textContactName"
            android:layout_marginRight="-71dp"
            android:layout_marginBottom="-8dp"
            android:background="@color/system_transparent"
            android:src="@drawable/star" />



    </RelativeLayout>

</RelativeLayout>